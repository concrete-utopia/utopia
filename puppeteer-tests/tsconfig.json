{
  "compilerOptions": {
    "types": ["node", "jest"],
    "outDir": "./dist",
    "target": "es2019",
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "noEmit": true,
    "noLib": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
