{
  "registerModule": {
    "prefix": "registerModule",
    "body": ["registerModule"],
    "description": "Register Module Import"
  },
  "registerModule(...)": {
    "prefix": "registerModule(...)",
    "body": [
      "registerModule(",
      "  '${1:${TM_FILEPATH/~(.*)\\..+$/$1/}}', // module name or absolute file path",
      "  {",
      "    ${2:ComponentName}: {",
      "      controls: { // property controls",
      "        ${3:PropName}: {",
      "          control: 'string-input',",
      "          label: '${3:PropName}'",
      "        },",
      "      },",
      "      insertOptions: [ // each option appears in the insert menu",
      "        {",
      "          menuLabel: '${2:ComponentName}', // label to use in the insert menu, optional",
      "          codeToInsert: '<${2:ComponentName} />',",
      "          // additionalRequiredImports: `import '/src/styles.css';`, // optional",
      "        },",
      "      ],",
      "    },",
      "  }",
      ")"
    ],
    "description": "Register Module Function Body"
  }
}
