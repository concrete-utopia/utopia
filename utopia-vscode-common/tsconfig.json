{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "ES2020",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
